{
  "name": "@holocron/rbac-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Universal, database-agnostic RBAC (Role-Based Access Control) authorization library for NestJS and Express.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "dev": "turbo run dev --parallel",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!./examples/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeforprod/RBAC.git"
  },
  "keywords": [
    "rbac",
    "authorization",
    "access-control",
    "permissions",
    "roles",
    "nestjs",
    "express",
    "typeorm",
    "mongoose",
    "postgres",
    "mongodb"
  ],
  "author": "Holocron Team",
  "license": "MIT"
}
