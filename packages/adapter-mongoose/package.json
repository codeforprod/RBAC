{
  "name": "@holocron/rbac-adapter-mongoose",
  "version": "1.0.0",
  "description": "MongoDB/Mongoose adapter for @holocron/rbac-core RBAC library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathPattern=unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "rbac",
    "authorization",
    "access-control",
    "permissions",
    "roles",
    "mongodb",
    "mongoose"
  ],
  "author": "Holocron Team",
  "license": "MIT",
  "peerDependencies": {
    "mongoose": "^7.0.0 || ^8.0.0"
  },
  "dependencies": {
    "@holocron/rbac-core": "*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "mongoose": "^8.0.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
